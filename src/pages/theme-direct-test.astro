---
// src/pages/theme-direct-test.astro
// A direct test page that uses pure CSS without Tailwind
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Direct Theme Test</title>
  <style>
    /* Direct styling without Tailwind */
    body {
      margin: 0;
      padding: 20px;
      font-family: system-ui, sans-serif;
      transition: all 0.3s ease;
      background-color: white;
      color: black;
    }
    
    html.dark body {
      background-color: black !important;
      color: white !important;
    }
    
    .container {
      max-width: 800px;
      margin: 0 auto;
    }
    
    button {
      padding: 10px 15px;
      border: none;
      border-radius: 4px;
      cursor: pointer;
      margin-bottom: 20px;
      background-color: #ddd;
    }
    
    html.dark button {
      background-color: #333;
      color: white;
    }
    
    .test-box {
      padding: 20px;
      border: 1px solid #ddd;
      margin-bottom: 20px;
      border-radius: 4px;
    }
    
    html.dark .test-box {
      border-color: #555;
    }
    
    .debug-box {
      background-color: #f5f5f5;
      padding: 20px;
      border-radius: 4px;
      margin-top: 40px;
    }
    
    html.dark .debug-box {
      background-color: #222;
    }
    
    .light-only {
      display: block;
    }
    
    .dark-only {
      display: none;
    }
    
    html.dark .light-only {
      display: none;
    }
    
    html.dark .dark-only {
      display: block;
    }
  </style>
  
  <script is:inline>
    // Set default theme to dark
    const savedTheme = localStorage.getItem('direct-theme');
    
    if (savedTheme === 'light') {
      document.documentElement.classList.remove('dark');
    } else {
      document.documentElement.classList.add('dark');
      if (!savedTheme) {
        localStorage.setItem('direct-theme', 'dark');
      }
    }
  </script>
</head>
<body>
  <div class="container">
    <h1>Direct Theme Test</h1>
    <p>This page tests theme switching without Tailwind</p>
    
    <button id="theme-toggle">Toggle Theme</button>
    
    <div class="test-box">
      <h2>Theme Test Box</h2>
      <p class="light-only">This text only shows in LIGHT mode</p>
      <p class="dark-only">This text only shows in DARK mode</p>
    </div>
    
    <div class="test-box">
      <h2>Images Test</h2>
      
      <img 
        src="https://via.placeholder.com/200x100/ffffff/000000?text=Light+Mode+Image" 
        alt="Light Mode Only" 
        class="light-only"
        width="200"
        height="100"
      />
      
      <img 
        src="https://via.placeholder.com/200x100/000000/ffffff?text=Dark+Mode+Image" 
        alt="Dark Mode Only" 
        class="dark-only"
        width="200"
        height="100"
      />
    </div>
    
    <div class="debug-box">
      <h3>Debug Info:</h3>
      <p>HTML classes: <span id="html-classes">checking...</span></p>
      <p>localStorage theme value: <span id="storage-value">checking...</span></p>
      <p>Current theme: <span id="current-theme">checking...</span></p>
    </div>
  </div>
  
  <script>
    // Update debug info
    function updateDebugInfo() {
      document.getElementById('html-classes').textContent = 
        document.documentElement.classList.toString() || 'none';
      document.getElementById('storage-value').textContent = 
        localStorage.getItem('direct-theme') || 'not set';
      document.getElementById('current-theme').textContent = 
        document.documentElement.classList.contains('dark') ? 'dark' : 'light';
    }
    
    // Toggle theme
    document.getElementById('theme-toggle').addEventListener('click', () => {
      const isDark = document.documentElement.classList.contains('dark');
      
      if (isDark) {
        document.documentElement.classList.remove('dark');
        localStorage.setItem('direct-theme', 'light');
      } else {
        document.documentElement.classList.add('dark');
        localStorage.setItem('direct-theme', 'dark');
      }
      
      // Force a repaint to ensure styles apply
      document.body.style.transition = 'none';
      const _ = document.body.offsetHeight; // Force a repaint
      document.body.style.transition = '';
      
      updateDebugInfo();
    });
    
    // Initialize debug info
    document.addEventListener('DOMContentLoaded', updateDebugInfo);
    
    // Update immediately
    updateDebugInfo();
  </script>
</body>
</html>