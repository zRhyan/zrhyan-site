  {
    title: 'Philosophy',
    topic: '0 posts',
    image: '/topic-covers/philosophy-cover.png',
    link: 'philosophy',
  },
  {
    title: 'Science',
    topic: '0 posts',
    image: '/topic-covers/science-cover.png',
    link: 'posts/science',
  },
  {
    title: 'Art',
    topic: '0 posts',
    image: '/topic-covers/art-cover.png',
    link: 'posts/art',
  },
  {
    title: 'Mathematics',
    topic: '0 posts',
    image: '/topic-covers/mathematics-cover.png',
    link: 'posts/mathematics',
  },
  {
    title: 'Technology',
    topic: '0 posts',
    image: '/topic-covers/technology-cover-test.jpg',
    link: 'posts/technology',
  },
  {
    title: 'Psychology',
    topic: '0 posts',
    image: '/topic-covers/psychology-cover.png',
    link: 'posts/psychology',
  },
  {
    title: 'Sociology',
    topic: '0 posts',
