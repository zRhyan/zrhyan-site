---
// src/pages/posts/philosophy/index.astro
import MainLayout from '../../../layouts/MainLayout.astro';
import PostCard from '../../../components/PostCard.astro';
import '../../../styles/global.css';

// Dummy posts — replace with dynamic content later
const posts = [
  {
    title: 'What is Truth?',
    topic: 'Philosophy',
    date: '2025-04-12',
    image: '/post-covers/test.png',
    link: '/posts/philosophy/what-is-truth'
  },
  {
    title: 'The Allegory of the Cave',
    topic: 'Philosophy',
    date: '2025-03-20',
    image: '/post-covers/test.png',
    link: '/posts/philosophy/allegory-of-the-cave'
  }
];
---

<MainLayout title="Philosophy">
  <!-- Banner -->
  <section class="w-full h-64 sm:h-80 md:h-96 relative">
    <img
      src="/topic-covers/philosophy-cover.png"
      alt="Philosophy Banner"
      class="absolute inset-0 w-full h-full object-cover"
    />
    <div class="absolute inset-0 bg-black/40 dark:bg-black/50" />
  </section>

  <!-- Title and intro -->
  <section class="max-w-4xl mx-auto px-4 py-10 text-center">
    <h1 class="text-5xl sm:text-6xl font-bold text-black dark:text-white mb-4">Philosophy</h1>
    <p class="text-gray-600 dark:text-gray-300 text-lg max-w-2xl mx-auto">
      Philosophy is the search for fundamental understanding — a disciplined reflection on reality,
      knowledge, and the human condition.
    </p>
  </section>

  <!-- Posts Grid -->
  <section class="max-w-6xl mx-auto px-4 py-6">
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
      {posts.map((post) => (
        <PostCard
          title={post.title}
          topic={post.topic}
          date={post.date}
          image={post.image}
          link={post.link}
        />
      ))}
    </div>
  </section>
</MainLayout>