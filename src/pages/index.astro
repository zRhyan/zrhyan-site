---
// src/pages/index.astro
// Tailwind CSS import - make sure this path is correct
import '../styles/global.css'

// Components imports
import MainLayout from "../layouts/MainLayout.astro";
import PostCard from "../components/PostCard.astro";
---

<MainLayout title="Home">
	<!-- Hero section with welcome message and logo -->
	<section class="max-w-6xl mx-auto py-5 px-0">
			<div class="flex flex-col items-center justify-center text-center min-h-[400px]">
				<div class="w-full md:w-1/2 ">
					<!-- Typewriter animation for welcome text -->
					<div class="typewriter mb-4 flex justify-center">
						<h1 class="text-6xl font-serif font-bold text-primary">
							Welcome
						</h1>
					</div>
					<p class="text-lg font-sans text-black dark:text-white mt-6">
						Here you can explore my latest posts, discover some of the projects I've crafted, find ways to get in touch, and read a concise snapshot about who I am.
					</p>
				</div>
				<!-- Right. NO MORE -->
				
			</div>
			
			<!-- Navigation buttons -->
			<div class="flex flex-wrap justify-center gap-4 mt-2">
				<a href="/posts" class="bg-primary text-white font-semibold py-2 px-6 rounded-lg hover:bg-secondary">
					Read My Posts
				</a>
				<a href="/projects" class="bg-primary text-white font-semibold py-2 px-6 rounded-lg hover:bg-secondary">
					See Some of My Works
				</a>
			</div>
	</section>
	
	<!-- Latest posts section -->
	<section class="max-w-6xl mx-auto px-4 py-10">
		<h2 class="text-2xl font-bold mb-6 text-left dark:text-white">Latest Posts</h2>
		<div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
			<PostCard
			title="First Exploration"
			date="2025-05-01"
			topic="Philosophy"
			image="https://cdn.mos.cms.futurecdn.net/LEkEkAKZQjXZkzadbHHsVj-480-80.jpg.webp"
			link="/posts/first-exploration"
			/>
			<PostCard
			title="The Logic of Nature"
			date="2025-04-20"
			topic="Science"
			image="https://jd-doria.com/full/logic_of_nature/logic_of_nature_05.jpg"
			link="/posts/logic-of-nature"	
			/>
			<PostCard
			title="Nexal Structures"
			date="2025-04-10"
			topic="Personal Theory"
			image="/post-covers/test.png"
			link="/posts/nexal-structures"
			/>
			<!-- Add more cards as needed -->
		</div>
	</section>
	
	<!-- Typewriter CSS -->
	<style>
		/* The typewriter container */
		.typewriter h1 {
			overflow: hidden; /* Ensures the content is not revealed until the animation */
			border-right: 0.02em solid var(--cursor-color, rgb(255, 255, 255));
			white-space: nowrap; /* Keeps the content on a single line */
			margin: 0; /* Gives that scrolling effect as the typing happens */
			letter-spacing: .05em; /* Adjust as needed */
			width: fit-content; /* Add this line */
			animation:
				typing 1s steps(8, end),
				blink-caret 1s step-end infinite;
		}

		/* The typing effect */
		@keyframes typing {
			from { width: 0; }
			to { width: 7ch; }
		}

		/* The typewriter cursor effect */
		@keyframes blink-caret {
			from, to { border-color: transparent }
			50% { border-color: var(--cursor-color, rgb(255, 255, 255)); }
		}
	</style>
	
	<!--Update the cursor color-->
	<script>
		function updateCursorColor() {
			const isDark = document.documentElement.classList.contains('dark');
			const root = document.documentElement;

			// Update the CSS variable for the cursor color
			root.style.setProperty('--cursor-color', isDark ? 'white' : 'black');
		}

		// Run the function on page load
		document.addEventListener('DOMContentLoaded', updateCursorColor);

		// Listen for theme changes (if your theme toggle updates the `dark` class dynamically)
		const observer = new MutationObserver(updateCursorColor);
		observer.observe(document.documentElement, { attributes: true, attributeFilter: ['class'] });
	</script>
</MainLayout>