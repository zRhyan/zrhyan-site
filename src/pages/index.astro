---
// src/pages/index.astro
// Tailwind CSS import - make sure this path is correct
import '../styles/global.css'
// Testing JS in Astro.
const str = "Rhyan"
const num = 0
const obj = {
	name: str,
	number: num,
	favorites: ["astro", "css", "js"]
}
// Function to turn some elements visible or not:
const isVisible = true;

// Components imports
import MainLayout from "../layouts/MainLayout.astro";
import PostCard from "../components/PostCard.astro";
---
<MainLayout title="Home">
	<section class="max-w-5xl mx-auto py-12 px-4 text-center">
	  <div data-astro-skeleton>
		<div class="skeleton h-32 w-32 mx-auto mb-6 rounded-full"></div>
		<div class="skeleton h-10 w-3/4 mx-auto mb-4"></div>
		<div class="skeleton h-6 w-1/2 mx-auto mb-8"></div>
		<div class="skeleton h-10 w-32 mx-auto rounded-full"></div>
	  </div>
	  <div class="hidden" data-astro-content>
		<img src="/logo.png" alt="Rhyan's Logo" class="mx-auto h-32 mb-6" />
		<h1 class="text-4xl font-bold text-primary mb-4">Rhyan's Blog</h1>
		<p class="text-lg text-black dark:text-white max-w-2xl mx-auto mb-8">
		  Exploring what interests me in this Universe.
		</p>
		<a href="/posts" class="bg-primary text-white font-semibold py-2 px-6 rounded-full hover:bg-secondary">
		  Read My Posts
		</a>
	  </div>
	</section>
	<section class="max-w-6xl mx-auto px-4 py-10">
		<h2 class="text-2xl font-bold mb-6 text-left dark:text-white">Latest Posts</h2>
		<div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
			<PostCard
			title="First Exploration"
			date="2025-05-01"
			topic="Philosophy"
			image="https://cdn.mos.cms.futurecdn.net/LEkEkAKZQjXZkzadbHHsVj-480-80.jpg.webp"
			link="/posts/first-exploration"
			/>
			<PostCard
			title="The Logic of Nature"
			date="2025-04-20"
			topic="Science"
			image="https://jd-doria.com/full/logic_of_nature/logic_of_nature_05.jpg"
			link="/posts/logic-of-nature"	
			/>
			<PostCard
			title="Nexal Structures"
			date="2025-04-10"
			topic="Personal Theory"
			image="/post-covers/test.png"
			link="/posts/nexal-structures"
			/>
			<!-- Add more cards as needed -->
		</div>
	</section>
	<script>
	  document.addEventListener('DOMContentLoaded', () => {
		const skeleton = document.querySelector('[data-astro-skeleton]');
		const content = document.querySelector('[data-astro-content]');
		setTimeout(() => {
		  if (skeleton) skeleton.classList.add('hidden');
		  if (content) content.classList.remove('hidden');
		}, 1000);
	  });
	</script>
</MainLayout>