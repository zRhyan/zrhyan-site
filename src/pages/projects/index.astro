<style>
  /* Optional: Add any specific styles here */
  


  /* Animation for cards */
  @keyframes fadeIn {
    from { opacity: 0; transform: translateY(20px); }
    to { opacity: 1; transform: translateY(0); }
  }


  
  .grid > div {
    animation: fadeIn 0.5s ease-out forwards;
    opacity: 0;
  }
  
  .grid > div:nth-child(1) { animation-delay: 0.1s; }
  .grid > div:nth-child(2) { animation-delay: 0.2s; }
  .grid > div:nth-child(3) { animation-delay: 0.3s; }
  .grid > div:nth-child(4) { animation-delay: 0.4s; }

  /* Fix vertical spacing for the title */
  h1 {
    line-height: 1.2; /* Ensure no text is cut off */
  }

  /* Adjust spacing between title and other elements */
  .w-full.py-16 {
    padding-top: 6rem; /* Increase top padding */
    padding-bottom: 6rem; /* Increase bottom padding */
  }

  .mb-16 {
    margin-bottom: 4rem; /* Ensure sufficient space below the title */
  }

  .grid {
    gap: 3rem; /* Increase spacing between project cards */
  }

  /* Custom CSS property – animatable <angle> */
  @property --angle {
    syntax: '<angle>';
    initial-value: 0deg;
    inherits: false;
  }

  /* Base appearance of the animated border */
  .animated-border {
    --angle: 0deg;
    --fill: var(--color-white);
    position: absolute;
    inset: -3px;
    border-radius: inherit;
    padding: 5px;
    box-sizing: border-box;
    opacity: 0;
    transition: opacity 0.3s ease;
    -webkit-mask:
      linear-gradient(#000 0 0) content-box,
      linear-gradient(#000 0 0);
    -webkit-mask-composite: xor;
            mask-composite: exclude;
  }

  html.dark .animated-border {
    --fill: var(--color-black);
  }

  /* Hover animation – half-turn sweep (0° → 180°) */
  @keyframes border-sweep {
    from { --angle: 0deg; }
    to   { --angle: 180deg; }
  }

  .group:hover .animated-border {
    animation: border-sweep 1.2s ease forwards;
    background: conic-gradient(
      from var(--angle),
      var(--color-secondary) 45deg,
      var(--fill)            135deg,
      var(--color-primary)   225deg,
      var(--fill)            315deg,
      var(--color-secondary) 390deg,
      var(--color-secondary) 405deg
    ) border-box;
    opacity: 1;
  }
</style>