---
// src/layouts/TopicsLayout.astro

import '../styles/global.css';
import Header from '../components/Header.astro';
import ThemeScript from '../components/ThemeScript.astro';
import ThemeToggle from '../components/ThemeToggle.astro';
import ParticleBackground from '../components/ParticleBackground.astro';
import PostCard from '../components/PostCard.astro';

const { title, banner, description, posts, font, fontSize, fontWeight, letterSpacing, bannerPosition = 'center' } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title ? `${title} | Rhyan's Site` : `Rhyan's Site`}</title>
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link href="https://fonts.googleapis.com/css2?family=Aref+Ruqaa:wght@400;700&family=Ballet:opsz@16..72&family=Cinzel+Decorative:wght@400;700;900&family=EB+Garamond:ital,wght@0,400..800;1,400..800&family=Monsieur+La+Doulaise&family=Turret+Road:wght@200;300;400;500;700;800&display=swap" rel="stylesheet">

    <!-- Prevent flash of incorrect theme -->
    <ThemeScript />
  </head>

  <body class="transition-colors duration-300">
    <Header />
    <ParticleBackground />

    <!-- Full-width banner below header -->
    <div class="w-full h-64 sm:h-80 md:h-96 overflow-hidden">
      <img src={banner} alt={`${title} banner`} class="w-full h-full object-cover" style={`object-position: ${bannerPosition};`} />
    </div>

    <!-- Topic header content -->
    <main class="mx-auto max-w-6xl px-4 py-10">
      <section class="max-w-4xl mx-auto text-center mb-12">
        <h1 class="text-black dark:text-white mb-4" style={`font-family: '${font}', serif; font-size: ${fontSize}; font-weight: ${fontWeight}; letter-spacing: ${letterSpacing};`}>
          {title}
        </h1>
        <p class="text-2x1 text-gray-600 dark:text-gray-400">
          {description}
        </p>
      </section>

      <!-- Posts grid -->
      <section>
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
          {posts.map(post => (
            <PostCard
              title={post.title}
              date={post.date}
              topic={post.topic}
              image={post.image}
              link={post.link}
            />
          ))}
        </div>
      </section>
    </main>

    <!-- Theme toggle -->
    <div class="fixed bottom-4 right-4 z-50">
      <ThemeToggle />
    </div>

    <!-- Footer -->
    <footer class="mt-12 border-t-2 gradient-border py-6 text-center text-gray-600 dark:border-gray-800 dark:text-gray-400">
      <div class="mx-auto max-w-6xl px-4">
        <p>&copy; {new Date().getFullYear()} Rhyan's Site. All rights reserved.</p>
      </div>
    </footer>
  </body>
</html>