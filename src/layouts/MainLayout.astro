---
import '../styles/global.css';
import Header from '../components/Header.astro';
import ThemeScript from '../components/ThemeScript.astro';
import ThemeToggle from '../components/ThemeToggle.astro';
import ParticleBackground from '../components/ParticleBackground.astro';

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title ? `${title} | Rhyan's Site` : `Rhyan's Site`}</title>
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />

    <!-- Prevent flash of incorrect theme -->
    <ThemeScript />
  </head>

  <body class="transition-colors duration-300">
    <Header />
    <ParticleBackground />
    <main class="mx-auto max-w-6xl px-4 py-10">
      <slot />
    </main>

    <!-- Fixed bottom-right theme toggle -->
    <div class="fixed bottom-4 right-4 z-50">
      <ThemeToggle />
    </div>

    <footer class="mt-12 border-t-2 gradient-border py-6 text-center text-gray-600 dark:border-gray-800 dark:text-gray-400">
      <div class="mx-auto max-w-6xl px-4">
        <p>&copy; {new Date().getFullYear()} Rhyan's Site. All rights reserved.</p>
      </div>
    </footer>
  </body>
</html>
