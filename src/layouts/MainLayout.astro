---
import '../styles/global.css';
import Header from '../components/Header.astro';
import ThemeScript from '../components/ThemeScript.astro';
import ThemeToggle from '../components/ThemeToggle.astro';
import ParticleBackground from '../components/ParticleBackground.astro';


const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title ? `${title} | Rhyan's Site` : `Rhyan's Site`}</title>
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link href="https://fonts.googleapis.com/css2?family=Aref+Ruqaa:wght@400;700&family=Babylonica&family=Bahiana&family=Ballet:opsz@16..72&family=Cinzel+Decorative:wght@400;700;900&family=EB+Garamond:ital,wght@0,400..800;1,400..800&family=Lexend+Zetta:wght@100..900&family=Monsieur+La+Doulaise&family=Turret+Road:wght@200;300;400;500;700;800&family=UnifrakturMaguntia&display=swap" rel="stylesheet">
    <!-- Prevent flash of incorrect theme -->
    <ThemeScript />
  </head>

  <body class="transition-colors duration-300">
    <Header />
    <ParticleBackground />
    <main class="mx-auto max-w-15xl px-8 py-10">
      <slot />
    </main>

    <!-- Fixed bottom-right theme toggle -->
    <div class="fixed bottom-4 right-4 z-50">
      <ThemeToggle />
    </div>

    <footer class="mt-28 border-t-2 gradient-border py-8 text-center text-gray-600 dark:border-gray-800 dark:text-gray-400">
      <div class="mx-auto max-w-6xl px-4">
        <div class="flex flex-col items-center justify-center space-y-6">
          <p id="contact" class="text-3xl font-light font-serif tracking-wider py-2">Contact</p>
          <style>
          #contact {
            
          }
          </style>
          <!-- Contact Links -->
          <div class="flex flex-wrap justify-center gap-6">
            <!-- Email -->
            <a href="mailto:zrhyan@protonmail.com" 
              class="flex items-center space-x-2 hover:text-blue-500 transition-colors"
              title="Email me">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
              </svg>
              <span class="text-sm">Email</span>
            </a>

            <!-- WhatsApp -->
            <a href="wa.me/3491686133" 
              class="flex items-center space-x-2 hover:text-green-500 transition-colors"
              target="_blank"
              rel="noopener noreferrer"
              title="Contact on WhatsApp">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24">
                <path d="M.057 24l1.687-6.163c-1.041-1.804-1.588-3.849-1.587-5.946.003-6.556 5.338-11.891 11.893-11.891 3.181.001 6.167 1.24 8.413 3.488 2.245 2.248 3.481 5.236 3.48 8.414-.003 6.557-5.338 11.892-11.893 11.892-1.99-.001-3.951-.5-5.688-1.448l-6.305 1.654zm6.597-3.807c1.676.995 3.276 1.591 5.392 1.592 5.448 0 9.886-4.434 9.889-9.885.002-5.462-4.415-9.89-9.881-9.892-5.452 0-9.887 4.434-9.889 9.884-.001 2.225.651 3.891 1.746 5.634l-.999 3.648 3.742-.981zm11.387-5.464c-.074-.124-.272-.198-.57-.347-.297-.149-1.758-.868-2.031-.967-.272-.099-.47-.149-.669.149-.198.297-.768.967-.941 1.165-.173.198-.347.223-.644.074-.297-.149-1.255-.462-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.297-.347.446-.521.151-.172.2-.296.3-.495.099-.198.05-.372-.025-.521-.075-.148-.669-1.611-.916-2.206-.242-.579-.487-.501-.669-.51l-.57-.01c-.198 0-.52.074-.792.372s-1.04 1.016-1.04 2.479 1.065 2.876 1.213 3.074c.149.198 2.095 3.2 5.076 4.487.709.306 1.263.489 1.694.626.712.226 1.36.194 1.872.118.571-.085 1.758-.719 2.006-1.413.248-.695.248-1.29.173-1.414z"/>
              </svg>
              <span class="text-sm">WhatsApp</span>
            </a>

            <!-- LinkedIn -->
            <a href="https://www.linkedin.com/in/zrhyan/" 
              class="flex items-center space-x-2 hover:text-blue-700 transition-colors"
              target="_blank"
              rel="noopener noreferrer"
              title="Connect on LinkedIn">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24">
                <path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"/>
              </svg>
              <span class="text-sm">LinkedIn</span>
            </a>
          </div>

          <!-- Copyright -->
          <div class="pt-6 border-t border-gray-200 dark:border-gray-700 w-full">
            <p>&copy; {new Date().getFullYear()} Rhyan's Site. All rights reserved.</p>
          </div>
        </div>
      </div>
    </footer>
  </body>
</html>
